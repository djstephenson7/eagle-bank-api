generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int    @id @default(autoincrement())
  name        String
  email       String @unique
  phoneNumber String
  addressLine1 String
  addressLine2 String
  addressLine3 String
  town         String
  county       String
  postcode     String

  accounts    Account[]
}


model Account {
  id              Int           @id @default(autoincrement())
  accountNumber   String
  sortCode        String
  name            String
  accountType     String
  balance         Int           // stored in smallest currency unit (e.g. pence)
  currency        String
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  userId          Int
  user            User          @relation(fields: [userId], references: [id])
  transactions    Transaction[]
}

model Transaction {
  id            Int       @id @default(autoincrement())
  amount        Int       // stored in smallest currency unit (e.g. pence)
  currency      String
  type          String    // "deposit" | "withdrawal"
  reference     String

  createdAt     DateTime  @default(now())

  accountId     Int
  account       Account   @relation(fields: [accountId], references: [id])
}
